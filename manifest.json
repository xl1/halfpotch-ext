{
  "manifest_version": 2,
  "name": "halfpotch-ext",
  "version": "1.0",
  "background": {
    "scripts": [
      "/resource/background.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "/resource/content_script.js"
    ],
    "matches": [
      "http://halfpotch.appspot.com/*"
    ]
  }],
  "permissions": [
    "tabs",
    "http://halfpotch.appspot.com/*",
    "http://www.bricklink.com/*"
  ]
}